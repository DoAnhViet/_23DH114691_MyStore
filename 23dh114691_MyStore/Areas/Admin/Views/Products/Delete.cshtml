@model _23dh114691_MyStore.Models.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="bg-success">Xoá sản phẩm</h2>

<div class="alert-danger">Bạn có thực sự muốn xoá?</div>
<div class="container-fluid">
    <dl class="dl-horizontal">
        <dt>Tên sản phẩm</dt>
        <dd>@Html.DisplayFor(model => model.ProductName)</dd>
        <dt>Mô tả</dt>
        <dd> @Html.DisplayFor(model => model.ProductDecription)</dd>
        <dt> Đơn giá </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductPrice)
        </dd>

        <dt>
            Hình ảnh
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductImage)
        </dd>

        <dt>
            Danh mục
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>
        <dt style="padding:10px"></dt>

        <dd>
            @Html.ActionLink("Sửa", "Edit", new { id = Model.ProductID }, new { @class = "btn btn-primary btn-sm" })
            @Html.ActionLink("Xoá", "Delete", new { id = Model.ProductID }, new { @class = "btn btn-primary btn-sm" })
            @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-primary btn-sm" })
        </dd>
    </dl>
</div>
