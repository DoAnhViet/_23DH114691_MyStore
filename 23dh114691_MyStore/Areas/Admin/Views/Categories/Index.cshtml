@model IEnumerable<_23dh114691_MyStore.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="bg-success">DANH SÁCH DANH MỤC SẢN PHẨM</h2>




<table class="table  col-lg-12 col-md-6 " >
    <tr>
        <th class=" bg-success col-lg-8 col-md-4 ">
            @*@Html.DisplayNameFor(model => model.CategoryName)*@
            Tên danh mục
        </th>
        <th class="bg-success col-lg-4 col-md-2"> </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.CategoryID }, new { @class = "btn btn-primary btn-sm" })
                @*@Html.ActionLink("Chi tiết", "Details", new { id = item.CategoryID }, new { @class = "btn btn-primary btn-sm" })*@
                @Html.ActionLink("Xoá", "Delete", new { id = item.CategoryID }, new { @class = "btn btn-primary btn-sm" })
            </td>
        </tr>
    }

</table>
<p>
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary" })
</p>
